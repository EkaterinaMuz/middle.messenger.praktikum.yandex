{
  "name": "web_messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vite --port=3000",
    "start": "tsc && vite build && vite preview --port 3000",
    "prebuild": "npm run check && vite build",
    "build": "tsc && npm run lint && vite build",
    "check": "tsc && npm run lint",
    "preview": "vite preview",
    "test": "jest",
    "lint": "eslint . && npx stylelint \"**/*.css\"",
    "lint:fix": "npx eslint . --fix && npx stylelint \"**/*.css\" --fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "cssnano": "^7.0.7",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.4",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^10.2.0",
    "stylelint": "^16.21.0",
    "stylelint-config-standard": "^38.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.34.1",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@types/jest": "^30.0.0",
    "handlebars": "^4.7.8",
    "ts-jest": "^29.4.0",
    "vite-plugin-handlebars": "^1.5.0"
  }
}
